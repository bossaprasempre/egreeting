@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="img-responsive">
        <img src="~/images/halloween-959006_960_720.jpg" />
    </div>
    
    <div class="col-xs-12 col-md-6">
        <form>
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label for="to_name">To:</label>
                    <input class="form-control" id="to_name" style="text-transform: capitalize" name="name" placeholder=" Name: First & Last" type="text" maxlength="70" required>
                </div>
                <div class="col-sm-6 form-group">
                    <label for="to_email">Recipient Email:</label>
                    <input class="form-control" id="to_email" name="email" placeholder=" Enter Recipient's Email Address" type="email" required>
                </div>
                <div class="col-sm-6 form-group">
                    <label for="from_name">From:</label>
                    <input class="form-control" id="from_name" style="text-transform: capitalize" name="name" placeholder=" Name: First & Last" type="text" maxlength="70" required>
                </div>
                <div class="col-sm-6 form-group">
                    <label for="from_email">Your Email:</label>
                    <input class="form-control" id="from_email" name="email" placeholder=" Enter Your Email" type="email" required>
                </div>
                <div class="col-sm-12 form-group">
                    <label for="subject">Subject:</label>
                    <textarea class="form-control" id="subject" style="text-transform: capitalize" name="subject" placeholder=" Enter Email Subject" rows="1" maxlength="123"></textarea>
                </div>
                <div class="col-sm-12 form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" id="message" name="message" placeholder=" Enter your message" rows="5" maxlength="630" required></textarea>
                </div>
                <div class="col-sm-12 form-group">
                    <div class="g-recaptcha" data-sitekey="MyKey"></div>
                    <br />
                    <button class="btn btn-default pull-left" type="submit">Send</button>
                </div>
        </form>
    </div>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</div>